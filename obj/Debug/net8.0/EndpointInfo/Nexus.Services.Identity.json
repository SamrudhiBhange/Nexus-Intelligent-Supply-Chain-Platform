              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileResponseApiResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfileResponseApiResponse"
                }
              },
